class Caseless:
    def __init__(self,app):
	self.app = app
	self.user = 'ovi'

    def __call__(self,environ,start_response):

	chunk=iter(self.app(environ,start_response))
        name = next(chunk)
        password = next(chunk)
	if (name == self.user):
	    if(password == self.password):
	        yield "User Matched"
	        return
	else:
	    yield name

if __name__ == '__main__':
    from paste import httpserver
    from simplest2 import app
    httpserver.serve(Caseless(app),host='127.0.0.1',port ='8080')




